#header {
    flex: none;
    padding: 40px;
    height: 120px;
    overflow: hidden;
    position: relative;
    box-sizing: content-box;

    // height: 100vh;
    // background-color: $primary;
    #logo {
        float: left;
        text-align: center;
        -webkit-align-items: center;
        align-items: center;
        -webkit-justify-content: center;
        justify-content: center;

        h1 {
            font-size: 1.6rem;
        }
    }

    .nav {
        float: right;

        label {
            padding-top: 32px;
            font-size: 1.5rem;
            display: none;
        }

        #toggle {
            display: none;
        }

        // padding: 1.5rem;
        .menu {
            display: flex;
            line-height: 70px;

            .item {
                display: list-item;
                list-style: none;
                margin: 0 10px;
            }
        }
    }
}



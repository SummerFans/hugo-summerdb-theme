@media only screen and (max-width: 500px) {
  
  #header{
    overflow: initial;
    .menu {
      position :relative;
      label{
        display: block;
        cursor: pointer;
      }
      .menu_list{
        display:block;
        position : absolute;
        width: 100vw;
        right -40px;
        top: 370px;
        margin: 0;
        padding:0;
        box-sizing: border-box;
        box-shadow: 0 2px 15px rgba(0,0,0,0.2);
        transition all .4s;
        opacity: 0;
        z-index: -999;
        line-height: 2rem;
        li{
            display: block;
            overflow:hidden;
            margin:0;
            a{
              display: block;
              width: 100%;
              padding: 10px 30px;
              background-color: #fff;
              text-align: center;
              border-bottom: 1px solid #eee;
              &:active{
                background-color: #ccc;
              }
            }
        }
      }
      // .menu_list{

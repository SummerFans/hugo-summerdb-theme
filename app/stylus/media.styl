@media only screen and (max-width: 550px) {
  
  #header{
    overflow: initial;
    .nav {
      position :relative;
      label{
        display: block;
        cursor: pointer;
      }
      .menu{
        display:block;
        position : absolute;
        width: 100vw;
        right -40px;
        top: 370px;
        margin: 0;
        padding:0;
        box-sizing: border-box;
        box-shadow: 0 2px 15px rgba(0,0,0,0.2);
        transition all .4s;
        opacity: 0;
        z-index: -999;
        line-height: 2rem;
        .item{
            display: block;
            overflow:hidden;
            margin:0;
            a{
              display: block;
              width: 100%;
              padding: 10px 30px;
              background-color: #fff;
              text-align: center;
              border-bottom: 1px solid #eee;
              &:active{
                background-color: #ccc;
              }
            }
        }
      }

      #toggle:checked + .menu{
        display: block;
        top:70px;
        opacity: 1;
        z-index: 999;
      }
    }
  }
}

@import '../../node_modules/kouto-swiss/lib/kouto-swiss/index.styl';

// global reset
meyer-reset();
box-sizing-reset();

@import './variable.styl';
@import './typography.styl';

img {
    width: 100%;
}

.container {
    display: flex;
    width: 100vw;
    flex-flow: row wrap;
    overflow: hidden;

    #header {
        flex: none;
        width: 20vw;
        height: 100vh;
        background-color: $primary;

        #logo {
            text-align: center;

            h1 {
                font-size: 1.6rem;
            }
        }

        aside {
            padding: 1.5rem;
        }
    }

    .content {
        flex: none;
        width: 80vw;
        height: 100vh;

        .content-inner {
            flex-flow: row wrap;
            overflow: hidden;
            width: 100%;
            height: 100vh;
            overflow-y: scroll;
            overflow-x: hidden;
            -webkit-overflow-scrolling: touch;
            padding: 2rem;

            .article {
                padding: 0 2rem;

                .article-title {
                }

                .article-date {
                    float: right;
                    margin: 0;
                }

                .article-summary {
                    display: inline-block;
                    // width: 70%;
                    // height:30px;
                    font-size: 1rem;
                    // overflow :hidden;
                    // text-overflow: ellipsis;
                    // white-space: nowrap;
                    color: #999;
                    margin: 0;
                }
            }

            .article-page {
                display: block;
                width: 100%;
                margin: 0;

                li, a {
                    float: left;
                    display: block;
                    width: 50%;
                    list-style: none;
                    line-height: 5rem;
                    padding-left: 1rem;

                    &:last-child {
                        padding-right: 2.2rem;
                        text-align: right;
                    }
                }

                li {
                    a:first-child {
                        padding-right: 1rem;
                        text-align: left;
                    }
                }

                .disabled {
                    color: #ccc;
                }
            }

            .markdown-body {
                float: left;
                width: 80%;
                height: 100vh;
            }

            .about_info {
                width: 100%;
                padding: 2rem;

                p:first-of-type {
                    float: right;
                    width: 200px;
                    border-radius: 25rem;
                    overflow: hidden;
                    margin: 2rem;
                }

                ul {
                    li {
                        line-height: 1.8rem;
                    }
                }
            }

            .table-content {
                float: right;
                width: 20%;
                height: 100vh;
                overflow: hidden;

                #TableOfContents {
                    position: fixed;
                    top: 2rem;
                    right: 3rem;
                    ul {
                        margin: 0;
                        padding: 0;
                        list-style: none;
                        overflow: hidden;
                        li {
                            font-size: 0.8rem;
                            text-align: right;
                            a {
                                display: block;
                                height: 20px;
                                overflow: hidden;
                                text-overflow: ellipsis;
                                white-space: nowrap;
                            }
                        }
                    }
                }
            }
        }
    }

    .footer {
        position: fixed;
        bottom: 0;
        right: 0;
        width: 80vw;
        text-align: center;
        line-height: 40px;
        color: #999;
        line-height: 3rem;
        font-size: 0.9rem;
    }
}

@import './media.styl';

@import '../../node_modules/kouto-swiss/lib/kouto-swiss/index.styl';

// global reset
meyer-reset();
box-sizing-reset();

@import './variable.styl';
@import './typography.styl';

img {
    width: 100%;
}

// syntax style
.highlight {
    margin: 30px 0;

    .chroma {
        position: relative;
        border-radius: 10px;
        padding: 10px 15px;
        overflow: hidden;
        overflow-x: scroll;
        transition: all 0.5s;

        &:hover {
            box-shadow: inset 0 0 10px #000;
            width: 100%;
        }

        code {
            width: 100%;
            font-family: monospace;
        }
    }
}

blockquote{
    padding: 20px;
    margin-bottom: 30px;
    border-radius: 5px;
    font-style: italic;
    background-color: #f2f2f2;
    p{
        margin: 0;
    }
}


#header {
    flex: none;
    padding: 40px;
    height: 120px;
    overflow: hidden;
    position: relative;
    box-sizing: content-box;

    // height: 100vh;
    // background-color: $primary;
    #logo {
        float: left;
        text-align: center;
        -webkit-align-items: center;
        align-items: center;
        -webkit-justify-content: center;
        justify-content: center;

        h1 {
            font-size: 1.6rem;
        }
    }

    .menu {
        float: right;

        label {
            padding-top: 32px;
            font-size: 1.5rem;
            display: none;
        }

        #toggle {
            display: none;
        }

        // padding: 1.5rem;
        .menu_list {
            display: flex;
            line-height: 70px;

            li {
                display: list-item;
                list-style: none;
                margin: 0 10px;
            }
        }
    }
}

.container {
    display: flex;
    flex-flow: row wrap;
    overflow: hidden;
    position: relative;
    width: 85%;
    max-width: 760px;
    margin: 0 auto;
    padding-bottom: 40px;

    .list {
        width: 100%;
        overflow: hidden;

        .item {
            border-bottom: 0.55px solid #eee;
            padding: 40px 0;

            .title {
                a {
                    border-bottom: 3px solid #fff;
                    transition: border 0.5s;

                    &:hover {
                        border-bottom: 3px solid #eee;
                    }
                }
            }

            .title_en {
                font-family: 'PT Serif', 'Times New Roman', Serif;
            }

            .articlemeta {
                padding: 20px 0;
                color: #999;
                font-size: 1rem;

                a {
                    color: #014fb0;

                    &:hover {
                        text-decoration: underline;
                    }
                }
            }

            &:first-child {
                padding-top: 20px;
            }

            .tags {
                display: flex;
                overflow: hidden;
                margin-top: 30px;

                li {
                    display: list-item;
                    list-style: none;
                    margin: 0 5px;
                    height: 25px;
                    line-height: 25px;
                    padding: 0 10px;
                    background-color: #eee;
                    color: #999;
                    border-radius: 16px;
                    font-size: 12px;
                }
            }
        }
    }

    .article-page {
        display: block;
        width: 100%;
        margin: 0;

        li, a {
            float: left;
            display: block;
            width: 50%;
            list-style: none;
            line-height: 5rem;
            padding-left: 1rem;

            &:last-child {
                padding-right: 2.2rem;
                text-align: right;
            }
        }

        li {
            a:first-child {
                padding-right: 1rem;
                text-align: left;
            }
        }

        .disabled {
            color: #ccc;
        }
    }

    .main {
        width: 100%;
        overflow: hidden;

        .content {
        }

        .comment {
        }
    }

    // low
    .content {
        flex: none;
        width: 100%;
        overflow: hidden;

        .content-inner {
            flex-flow: row wrap;
            overflow: hidden;
            width: 100%;
            // height: 100vh;
            // overflow-y: scroll;
            // overflow-x: hidden;
            -webkit-overflow-scrolling: touch;
            padding: 2rem;

            .article {
                padding: 0 2rem;

                .article-title {
                }

                .article-date {
                    float: right;
                    margin: 0;
                }

                .article-summary {
                    display: inline-block;
                    // width: 70%;
                    // height:30px;
                    font-size: 1rem;
                    // overflow :hidden;
                    // text-overflow: ellipsis;
                    // white-space: nowrap;
                    color: #999;
                    margin: 0;
                }
            }

            .markdown-body {
                float: left;
                width: 80%;
            }

            .about_info {
                width: 100%;
                padding: 2rem;

                p:first-of-type {
                    float: right;
                    width: 200px;
                    border-radius: 25rem;
                    overflow: hidden;
                    margin: 2rem;
                }

                ul {
                    li {
                        line-height: 1.8rem;
                    }
                }
            }

            .table-content {
                float: right;
                width: 20%;
                overflow: hidden;

                #TableOfContents {
                    position: fixed;
                    top: 2rem;
                    right: 3rem;

                    ul {
                        margin: 0;
                        padding: 0;
                        list-style: none;
                        overflow: hidden;

                        li {
                            font-size: 0.8rem;
                            text-align: right;

                            a {
                                display: block;
                                height: 20px;
                                overflow: hidden;
                                text-overflow: ellipsis;
                                white-space: nowrap;
                            }
                        }
                    }
                }
            }
        }
    }
}

.footer {
    bottom: 0;
    right: 0;
    width: 100%;
    text-align: center;
    height: 80px;
    line-height: 80px;
    color: #999;
    font-size: 0.9rem;
}

::-webkit-scrollbar {
    width: 10px;
    height: 0px;
    background-color: #f2f2f2;
}

::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.05);
    background-color: #ccc;
}



@import '../../node_modules/kouto-swiss/lib/kouto-swiss/index.styl';

// global reset
meyer-reset();
box-sizing-reset();

@import './variable.styl';
@import './typography.styl';

img {
    width: 100%;
}

// syntax style
.highlight {
    margin: 30px 0;

    .chroma {
        position: relative;
        border-radius: 10px;
        padding: 10px 15px;
        overflow: hidden;
        overflow-x: scroll;
        transition: all 0.5s;

        &:hover {
            box-shadow: inset 0 0 10px #000;
            width: 100%;
        }

        code {
            width: 100%;
            font-family: monospace;
        }
    }
}

blockquote{
    padding: 20px;
    margin-bottom: 30px;
    border-radius: 5px;
    font-style: italic;
    background-color: #f2f2f2;
    p{
        margin: 0;
    }
}


.footer {
    bottom: 0;
    right: 0;
    width: 100%;
    text-align: center;
    height: 80px;
    line-height: 80px;
    color: #999;
    font-size: 0.9rem;
}

::-webkit-scrollbar {
    width: 10px;
    height: 0px;
    background-color: #f2f2f2;
}

::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.05);
    background-color: #ccc;
}

@import './header.styl';
@import './container.styl';

@import './media.styl';
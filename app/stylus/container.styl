.container {
    display: flex;
    flex-flow: row wrap;
    overflow: hidden;
    position: relative;
    width: 85%;
    max-width: 760px;
    margin: 0 auto;
    padding-bottom: 40px;

    // common
    .section_list{
        padding: 5px 0;
    }
    

    // Section page
    .home_more{
        display: block;
        width: 100%;
        text-align: center;
        font-size: 1rem;
        padding: 20px 0;
        margin-top:20px;
        transition: background-color .5s;
        &:hover{
            background-color:#eee;
        }
    }
    .tags_name, .categories_name{
        li{
            float: left;
            list-style: none;
            margin: 10px;
        }
    }
    
    .list {
        width: 100%;
        overflow: hidden;

        .item {
            border-bottom: 0.55px solid #eee;
            padding: 40px 0;

            .title {
                a {
                    border-bottom: 3px solid #fff;
                    transition: border 0.5s;

                    &:hover {
                        border-bottom: 3px solid #eee;
                    }
                }
            }

            .title_en {
                font-family: 'PT Serif', 'Times New Roman', Serif;
            }

            .articlemeta {
                padding: 20px 0;
                color: #999;
                font-size: 1rem;

                a {
                    color: #014fb0;

                    &:hover {
                        text-decoration: underline;
                    }
                }
            }

            &:first-child {
                padding-top: 20px;
            }

            .tags {
                display: flex;
                overflow: hidden;
                margin-top: 30px;

                li {
                    display: list-item;
                    list-style: none;
                    margin: 0 5px;
                    height: 25px;
                    line-height: 25px;
                    padding: 0 10px;
                    background-color: #eee;
                    color: #999;
                    border-radius: 16px;
                    font-size: 12px;
                }
            }
        }
    }

    .pagination {
        display: block;
        width: 100%;
        margin: 0;
        padding: 0;

        li {
            float: left;
            display: block;
            // width: 50%;
            width: (100 / 3)%;
            text-align: center;
            padding: 30px 0;

            &:first-child {
                text-align: left;
            }

            &:last-child {
                text-align: right;
            }
        }

        a {
            &:last-child {
                text-align: right;
            }
        }

        .page-current {
            color: #999;
            font-size: 1rem;
        }

        .disabled {
            color: #ccc;
        }
    }

    .main {
        width: 100%;
        overflow: hidden;

        .content {
        }

        .comment {
        }
    }

    // low
    .content {
        flex: none;
        width: 100%;
        overflow: hidden;

        .content-inner {
            flex-flow: row wrap;
            overflow: hidden;
            width: 100%;
            // height: 100vh;
            // overflow-y: scroll;
            // overflow-x: hidden;
            -webkit-overflow-scrolling: touch;
            padding: 2rem;

            .article {
                padding: 0 2rem;

                .article-title {
                }

                .article-date {
                    float: right;
                    margin: 0;
                }

                .article-summary {
                    display: inline-block;
                    // width: 70%;
                    // height:30px;
                    font-size: 1rem;
                    // overflow :hidden;
                    // text-overflow: ellipsis;
                    // white-space: nowrap;
                    color: #999;
                    margin: 0;
                }
            }

            .markdown-body {
                float: left;
                width: 80%;
            }

            .about_info {
                width: 100%;
                padding: 2rem;

                p:first-of-type {
                    float: right;
                    width: 200px;
                    border-radius: 25rem;
                    overflow: hidden;
                    margin: 2rem;
                }

                ul {
                    li {
                        line-height: 1.8rem;
                    }
                }
            }

            .table-content {
                float: right;
                width: 20%;
                overflow: hidden;

                #TableOfContents {
                    position: fixed;
                    top: 2rem;
                    right: 3rem;

                    ul {
                        margin: 0;
                        padding: 0;
                        list-style: none;
                        overflow: hidden;

                        li {
                            font-size: 0.8rem;
                            text-align: right;

                            a {
                                display: block;
                                height: 20px;
                                overflow: hidden;
                                text-overflow: ellipsis;
                                white-space: nowrap;
                            }
                        }
                    }
                }
            }
        }
    }
}